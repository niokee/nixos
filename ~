{
  services.blueman.enable = true;

  hardware.bluetooth = {
    enable = true;
    powerOnBoot = true;
    settings = {
      General = {
        Experimental = true;
      };
    };
  };

  systemd.user.services.connect-headphones = {
    description = "Auto-connect Bluetooth headphones";
    script = ''
      sleep 60
      bluetoothctl connect F8:4E:17:7F:1B:A3
    '';
    wantedBy = ["multi-user.target"];
  };
}
